<script type="text/ng-template" id="templates/mention.html">
  <div class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close"
                  data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">
            <i class="fa fa-wechat"></i>
            <%= t "rooms.mention_desc" %>
          </h4>
        </div>
        <div class="modal-body">
          <select ng-model="list" title="Mention" class="form-control" multiple>
            <option ng-value="user" ng-repeat="user in room.list_admin">{{ user.username }}</option>
            <option ng-value="user" ng-repeat="user in room.list_members">{{ user.username }}</option>
          </select>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" ng-click="mention()">Mention</button>
          <button class="btn btn-danger" ng-click="close()">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</script>
