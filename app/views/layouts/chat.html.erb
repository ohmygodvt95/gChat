<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= t "app.name" %> | <%= t "app.slogan" %>
    </title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <meta name="base" content="<%= root_path %>api/v1/">
  </head>

  <body class="fixed" ng-app="GChat">
    <div class="wrapper skin-blue">
      <%= render "chat/header" %>
      <%= render "chat/sidebar" %>
      <%= yield %>
    </div>
    <div class="hidden">
      <%= render "templates/welcome" %>
      <%= render "templates/contacts" %>
      <%= render "templates/group" %>
    </div>
    <%= javascript_include_tag "application" %>
  </body>
</html>
