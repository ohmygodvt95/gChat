<header class="main-header" ng-controller="HeaderController">
  <%= link_to root_path, class: "logo" do %>
    <span class="logo-mini">
      <b><%= t "app.char" %></b><%= t "app.short_name" %>
    </span>
    <span class="logo-lg">
      <b><%= t "app.char" %></b><%= t "app.short_name" %>
    </span>
  <% end %>
  <nav class="navbar navbar-static-top">
    <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only"><%= t "header.toggle_navition" %></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="messages-menu" title="Create a group chat">
          <a ng-click="openGroupModal()">
            <i class="fa fa-wechat"></i>
            <span class="label label-primary">
              <i class="fa fa-plus"></i>
            </span>
          </a>
        </li>
        <li class="messages-menu" title="Contacts management">
          <a ng-click="openContactModal()">
            <i class="fa fa-user-plus"></i>
            <span class="label label-success" ng-if="requests.total_count > 0">
              {{ requests.total_count }}
            </span>
          </a>
        </li>
        <li class="dropdown notifications-menu" title="Tasks management">
          <a href="" ng-click="openTaskManagerModal()">
            <i class="fa fa-tasks"></i>
            <span class="label label-warning" ng-if="tasks.length > 0">{{ tasks.length }}</span>
          </a>
        </li>
        <li class="dropdown user user-menu">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs"><%= current_user.email %></span>
            <span class="hidden-md"><i class="fa fa-gears"></i></span>
          </a>
          <input type="hidden" id="current_user" value="<%= current_user.id %>">
          <ul class="dropdown-menu">
            <li class="user-header">
              <img src="<%= current_user.avatar.thumb.url %>"
                class="img-circle" alt="User Image">
              <p>
                <%= current_user.email %>
                <small><%= t ".member_since" %> <%= current_user.created_at %></small>
              </p>
            </li>
            <li class="user-footer">
              <%= link_to edit_user_registration_url, class: "btn btn-default btn-block btn-flat" do %>
                <i class="fa fa-fw fa-vcard"></i>
                <%= t "chat.header.profile" %>
              <% end %>
              <%= link_to destroy_user_session_path,
                method: :delete, class: "btn btn-default btn-flat btn-block" do %>
                <i class="fa fa-fw fa-sign-out"></i>
                <%= t "header.logout" %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
